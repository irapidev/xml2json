{
  "name": "@rapidevelop/xml2json",
  "version": "1.0.2",
  "description": "XML2JSON is a library to convert a XML file or XML text string to JSON.",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "git:commit": "git-cz",
    "npm:version:major": "npm version major --no-git-tag-version",
    "npm:version:minor": "npm version minor --no-git-tag-version",
    "npm:version:patch": "npm version patch --no-git-tag-version",
    "test:types": "tsc --noEmit",
    "test:types:watch": "npm run test:types -- --watch",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "prebuild": "rm -rf ./dist/*",
    "build": "npm run build:types && npm run build:js",
    "prepublish": "npm run build",
    "prebuild:docs": "rm -rf ./docs/*",
    "build:docs": "jsdoc -c ./jsdoc.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rapidevelop/xml2json.git"
  },
  "keywords": [
    "xml2json",
    "xml2js",
    "parser"
  ],
  "author": "Iman Vafadarnezhad",
  "license": "MIT",
  "private": false,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "bugs": {
    "url": "https://github.com/rapidevelop/xml2json/issues"
  },
  "homepage": "https://github.com/rapidevelop/xml2json#readme",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/preset-typescript": "^7.3.3",
    "@types/node": "^12.0.2",
    "@types/request": "^2.48.1",
    "@types/sax": "^1.0.1",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.11.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "jsdoc": "^3.5.5",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "request": "^2.88.0",
    "sax": "^1.2.4"
  }
}
